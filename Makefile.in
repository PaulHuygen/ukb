
CCC = @CXX@
STATIC = @ENABLE_STATIC@
INCLUDES = -I @BOOST_INCLUDE_DIR@
LDFLAGS = @LDFLAGS@
UKB_VER = @PACKAGE_VERSION@
CCFLAGS = @CCFLAGS@ -DUKB_VER='"$(UKB_VER)"'

prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@
datarootdir = @datarootdir@

INSTALLDIR = ${bindir}

EXEC_SRC = ukb_wsd.cc ukb_ppv.cc compile_kb.cc
EXEC = $(notdir $(basename $(EXEC_SRC)))

SOURCES= common.cc globalVars.cc configFile.cc fileElem.cc kbGraph.cc disambGraph.cc csentence.cc wdict.cc

MEMBERS=$(SOURCES:.cc=.o)

.PHONY: all install clean

all: $(EXEC)

%.o : %.cc
	$(CCC) -c $(CCFLAGS) -o $@ $(INCLUDES) $<

$(EXEC): $(MEMBERS) $(SRCS) $(EXEC_SRC)
	$(CCC) $(CCFLAGS) -o $@ $@.cc $(MEMBERS) $(INCLUDES) $(STATIC) $(LDFLAGS)

install: $(EXEC)
	install -d -m 755 $(INSTALLDIR)
	@for exec in $(EXEC); do \
	cp -f $$exec $(INSTALLDIR) > /dev/null 2>&1; \
	done

clean:
	find . -type f -name '*.o' | xargs rm -f
	rm -f $(EXEC)
